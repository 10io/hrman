<%= form_for(@employee, :remote => true) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h2 class="modal-title"><%= action.titleize %> Employee</h2>
  </div>
  <div id="modal-body" class="modal-body">
    <div class="form-group <%= "has-error" if @employee.errors[:first_name].any? %>">
      <%= f.label(:first_name, :class => "control-label") %>
      <%= f.text_field(:first_name, :class => "form-control", :placeholder => "First Name") %>
      <% if @employee.errors[:first_name].any? %>
        <span class="help-block"><%= @employee.errors[:first_name].first %></span>
      <% end %>
    </div>
    <div class="form-group <%= "has-error" if @employee.errors[:last_name].any? %>">
      <%= f.label(:last_name, :class => "control-label") %>
      <%= f.text_field(:last_name, :class => "form-control", :placeholder => "Last Name") %>
      <% if @employee.errors[:last_name].any? %>
        <span class="help-block"><%= @employee.errors[:last_name].first %></span>
      <% end %>
    </div>
    <div class="form-group <%= "has-error" if @employee.errors[:email].any? %>">
      <%= f.label(:email, :class => "control-label") %>
      <%= f.email_field(:email, :class => "form-control", :placeholder => "example@sandbox.com") %>
      <% if @employee.errors[:email].any? %>
        <span class="help-block"><%= @employee.errors[:email].first %></span>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label(:phone, :class => "control-label") %>
      <%= f.text_field(:phone, :class => "form-control", :placeholder => "Phone") %>
    </div>
    <div class="form-group">
      <%= f.label(:department, :class => "control-label") %>
      <%= f.select(:department, %w(hr it director operations sales), {}, :class => "form-control") %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-success">Save</button>
  </div>
<% end %>
