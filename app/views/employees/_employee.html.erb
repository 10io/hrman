<tr>
  <td><%= employee.id %></td>
  <td><%= employee.first_name %></td>
  <td><%= employee.last_name %></td>
  <td><%= employee.email %></td>
  <td><%= employee.phone %></td>
  <td><%= employee.department %></td>
  <td>
    <%= link_to(edit_employee_url(employee), :class => "btn btn-default btn-xs", :role => "button", :remote => true) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to(employee_url(employee), :class => "btn btn-danger btn-xs", :role => "button", :method => :delete, :data => { :confirm => "Are you sure you want to delete #{employee.first_name} #{employee.last_name}" }) do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </td>
</tr>
